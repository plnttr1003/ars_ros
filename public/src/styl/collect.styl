.content_body
	width 940px
	margin-bottom 60px
	@media screen and (max-width: 1280px)
		width 700px

.column_main_inner
	&.stop_scroll
		height 100%
		overflow hidden

.content_item
	cursor pointer
	&:hover
		&:after
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			background rgba(0,0,0,0.2)
			content ''
			z-index 0
	.item_body
		display none

.exhibit_preview_block
	position absolute
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0.7)
	z-index 99
	display none
	.exhibit_preview_inner
		width 1280px
		height 100%
		// background-color green
		margin 0 auto
		.exhibit_images_preview_block
			width 940px
			height 100%
			float left
			position relative
			// background-color #AC8DB8
		.exhibit_description_block
			width 320px
			height 100%
			float right
			box-sizing border-box
			padding-left 10px
			padding-right 10px
			padding-top 120px
			background-color white
			.exhibit_title
				font 16pt/18pt 'PT Serif'
				margin-bottom 30px


.image_preview
	cursor pointer
	position absolute
	top 0
	left 0
	bottom 0
	right 0
	margin auto
	max-width 900px
	max-height 80%
	display none
	&:nth-child(1)
		display block