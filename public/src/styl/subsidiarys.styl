.content_column
	&.main
		// background-color #DFA3D7
	&.scroll
		// background-color #48A1DF
		.content_scroll_item
			// background-color #647A8A
			width 320px
			min-height 200px
			display block

.content_outer_block
	overflow hidden

.content_map_block
	width 460px
	height 460px
	// background-color #4FB2B8
	background-position center
	background-size contain
	background-repeat no-repeat
	float left
	position relative
	.content_map_item
		position absolute
		height 30px
		filter grayscale(1) contrast(100)
		opacity 0.6
		&:hover
		&.current
			filter none
			opacity 1

.content_items_block
	// background-color #B8657B
	box-sizing border-box
	padding-left 60px
	float left
	margin-left 20px
	width 420px
	.content_item
		color black
		text-decoration none
		display block
		margin-bottom 10px
		font-weight bold
		&:hover
		&.current
			color rgb(196, 20, 59)
	.content_items_title
		margin-bottom 20px
	.content_note
		margin-top 20px