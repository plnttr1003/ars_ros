.content_column
	&.scroll
		.content_scroll_item
			width 320px
			min-height 100px
			display block

.content_item
	width 240px
	float left
	height 145px
	overflow hidden
	text-decoration none
	color black
	display block
	padding-bottom 30px
	background-size cover
	background-position center
	cursor pointer
	.item_image
		width 240px
		display block
	.item_description
		padding-top 10px
		display none
		display table
		height 100%
		width 100%
		.item_date
			font 10pt/12pt 'Roboto'
			display none
		.item_title
			font 24pt/26pt 'Roboto'
			font-weight 200
			display none
			vertical-align middle
			text-align center
	&.important
		background-size cover
		background-position center
		width 480px
		height 325px
		&:hover
			background #f00!important
			color #000
		.item_description
			background transparent
			box-sizing border-box
			width 480px
			position absolute
			padding 10px
			bottom 0
			.item_date
				font 10pt/12pt 'Roboto'
			.item_title
				font 36pt/38pt 'Roboto'
				font-weight 200
	&:hover
		background #000!important
		color #fff
		.item_description
			.item_title
				display table-cell



