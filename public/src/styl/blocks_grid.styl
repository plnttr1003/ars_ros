.content_item
	width 220px
	float left
	height 145px
	overflow hidden
	text-decoration none
	color black
	display block
	margin-bottom 30px
	background-size cover
	background-position center
	cursor pointer
	.item_image
		width 220px
		display block
	.item_description
		padding-top 10px
		display none
		display table
		height 100%
		width 100%
		.item_date
			font 10pt/12pt 'Roboto'
		.item_title
			font 24pt/26pt 'Roboto'
			font-weight 300
			display none
			vertical-align middle
			text-align center
	&.important
		background-size cover
		background-position center
		width 480px
		height 325px
		.item_description
			background transparent
			box-sizing border-box
			width 480px
			color white
			position absolute
			padding 10px
			bottom 0
			.item_date
				font 10pt/12pt 'Roboto'
			.item_title
				font 36pt/38pt 'Roboto'
				font-weight 100
	&:hover
		background #f00!important
		.item_description
			.item_title
				display table-cell



