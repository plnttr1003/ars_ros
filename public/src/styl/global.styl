h1, h2, h3, h4, h5
	font-weight normal
	line-height 1em
	margin 0

h1
	padding 35px 0 10px

h2
	padding 30px 0 8px

h3
	padding 20px 0 5px

body
	margin 0
	padding 0
	font 12pt/14pt 'PT Sans'

html, body, .main_block, .content_block, .content_columns_block, .content_column, .column_inner_block
	height 100%

.header_block
	position absolute
	width 100%
	background-color rgba(0, 0, 0, 0.7)
	z-index 999

.search_block
	width 100%
	display none
	padding-bottom 5px

.search_input
	display block
	width 100%
	font-size 20pt
	color white
	background-color rgba(0, 0, 0, 0)
	border 0
	margin 0
	padding 0
	outline none
	padding-bottom 5px
	border-bottom 1px solid white
	font-family 'PT Sans'

.search_result
	width 100%
	margin-top 10px
	display none
	color white
	a
		color white

.search_context
	display none
	margin-bottom 20px

.context_title
	border 1px solid white
	display inline-block
	padding-left 5px
	padding-right 5px

.context_result
	display block
	text-decoration none
	margin-top 10px
	font 14pt/16pt 'PT Sans'
	&:hover
		color rgb(196, 20, 59)

.header_inner
.search_inner
	width 1280px
	padding-top 10px
	padding-bottom 10px
	margin 0 auto
	overflow hidden

.menu_block
	overflow hidden
	&.left
		float left
		.menu_item_block
			margin-left 15px
			float left
			.menu_item
				display block
				margin-top 4px
				font 12pt/14pt 'PT Sans'
				color white
				text-decoration none
				padding-bottom 3px
				&:hover
					color rgb(196, 20, 59)
			.menu_drop
				width 115px
				margin-left -10px
				padding-top 7px
				position absolute
				display none
				.drop_inner
					width 115px
					padding 0 10px 10px 10px
					background-color rgba(0, 0, 0, 0.7)
			&:hover .menu_drop
				display block
	&.right
		float right

.social_block
	float left
	a
		color white
		font 25px/25px 'Icons'
		display block
		float left
		margin-right 5px
		width 25px
		text-decoration none
		&:hover
			color rgb(196, 20, 59)

.options_block
	color white
	float left
	border-left 1px solid white
	margin-left 10px
.option
	margin-left 10px
	float left
	cursor pointer
	display block
	&:hover
		color rgb(196, 20, 59)
	&.lang
		margin-top 4px
	&.search
		width 25px
		height 25px
		font 25px/25px 'Icons'
		background-size cover

.header_logo
	display block
	overflow hidden
	margin-right 40px
	float left
	.logo_image
		min-width 50px
		height 23px
		display block
		float left
	.logo_title
		margin-left 15px
		color white
		text-decoration none
		width 190px
		float left
		font 8pt/10pt 'PT Serif'

.content_columns_block
	overflow hidden
	width 1280px
	margin 0 auto

.content_column
	box-sizing border-box
	&.main
		overflow hidden
		width 960px
		float left
		.content_title
			padding-top 90px
			margin-bottom 60px
			font 24pt/26pt 'PT Serif'
		.column_main_inner
			width 960px
			padding-right 25px
			overflow-y scroll
			height 100%
		.content_outer_block
			overflow hidden
	&.scroll
		overflow hidden
		width 320px
		float left
		.content_title
			display none // !!!!!!!!!!
			top 70px
			width 320px
			box-sizing border-box
			padding 10px
			position absolute
			color white
			text-shadow: 1px 1px 2px black
			font 14pt/16pt 'PT Serif'
		.content_scroll_items
			overflow-y scroll
			overflow-x hidden
			width 335px
			height 100%

.content_navigate_block
	overflow hidden
	margin-bottom 30px
	.navigate_title
		font-size 12pt
		float left
		font-weight bold
		margin-bottom 5px
	.navigate_items_block
		float left
		.navigate_item
			padding-left 4px
			padding-right 4px
			//border 1px solid #ccc
			float left
			margin-left 5px
			margin-right 11px
			font-size 12pt
			cursor pointer
			//border-radius 5px
			margin-bottom 5px
			position relative
			&:after
				content ''
				position absolute
				right -12px
				font-size 12px
				top 0px
				background transparent
				padding 0px 3px 0px 0px
				line-height 20px
				height 18px
				@media screen and (max-width: 1280px)
					height 21px
					line-height 23px
			&:hover
				background #e5e5e5
			&.selected
				background #4b4b4b
				color #fff
				&:after
					content 'âœ•'
					background #4b4b4b


.footer_block
	border-top 1px solid black
	font 10pt/12pt 'PT Serif'
	padding-top 15px
	margin-top 20px
	padding-bottom 20px
	text-align center
	.social_block
		float none
		display block
		text-align center
		a
			float none
			display inline-block
			color #000
	.footer_block_inner
		width 540px
		margin 12px auto 10px