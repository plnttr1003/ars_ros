.content_column
	&.scroll
		.content_scroll_item
			&:hover
				.content_image_description
					display none

.hide
	display none

.content_item
	color black
	text-decoration none
	box-sizing border-box
	width 460px
	border-top 1px solid #B8B8B8
	padding 10px
	background-color white
	.item_title
		font-weight bold
	.item_date
		float left
		color #B8B8B8
		margin-top 5px
	.item_body
		margin-top 5px
		font-weight normal
		.body
			font-weight normal
		b
			font-weight normal
	&:hover
		background-color rgb(240, 240, 240)
