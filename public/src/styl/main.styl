html
body
	height 100%
.screen_block
	height 100%
	&.intro_block
		background-size cover
		background-position 50%
		opacity 0.9
		width 100%
		display table
		.intro_block_inner
			height 100%
			display table-cell
			vertical-align middle
			text-align center
.content_outer_block
	opacity 0
	transition opacity 0.2s ease-in-out

.content_item
	&.event
		float left
		&:hover
			&:after
				position absolute
				top 0
				left 0
				right 0
				bottom 0
				background rgba(0,0,0,0.2)
				content ''
				z-index 0
	&.news
		box-sizing border-box
		// background-color #604A8A
		float none
		margin-bottom 20px
		min-height 0px
		margin-bottom 0px
		border-top 1px solid #B8B8B8
		padding-top 10px
		padding-bottom 10px
		padding-left 5px
		padding-right 5px
		.item_date
			margin-top 10px
			color #B8B8B8
		&:last-child
			margin-bottom 0px
			border-bottom 1px solid #B8B8B8
		&:hover
			background-color rgb(240, 240, 240)
			color #000

.item_fancy
	position absolute
	display block
	top 0
	left 0
	right 0
	bottom 0
	z-index 100
	//background #fc0
	//display none
	&:hover
		background #f00

.content_news_block
	// background-color #318A4E
	width 220px
	position absolute
	left 720px
	margin-bottom 20px