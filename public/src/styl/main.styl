.screen_block
	height 100%
	&.info_block
		width 100%
		position absolute
		overflow hidden
		z-index 200
		background rgba(0,0,0,0.75)
		display none
		.info_block_inner
			width 700px
			position absolute
			top 200px
			bottom 0
			left 50%
			margin-left -350px
			overflow hidden
			.content_navigate_block
				color #fff
				padding-right 40px
				overflow-y scroll
				width 100%
				height 100%
	&.intro_block
		width 100%
		position absolute
		overflow-y scroll
		cursor pointer

		z-index 2000
		background #000
		.intro_block_background
			height 100%
			background-size cover
			background-position 50%
			background-repeat no-repeat
			height 101%
			filter blur(10px)
		.intro_block_inner
			width 100%
			display table
			height 100%
			position absolute
			top 0
			.intro_block_image
				height 100%
				display table-cell
				vertical-align middle
				text-align center
				background rgba(0, 0, 0, 0.69)
				img
					width 378px
	&.about_block
		position absolute
		overflow-y auto
		width 100%
		background rgba(0,0,0,0.75)
		color #fff
		display none
		z-index 200
		.about_block_inner
			overflow-y visible
			width 700px
			margin 63px auto 0
			.about_block_image
				img
					margin 0 auto
					display block
					width 240px
					margin-bottom 55px
		.about_text_inner
			font 14pt/17pt 'code_pro_lightregular'
			p
				text-align justify
		.form_block
			width 600px;
			border 1px solid
			margin 40px auto 0
			height 230px
			margin-bottom 20px
			background rgba(208, 208, 208, 0.2)
			display block
			font 12pt/14pt 'code_pro_lightregular'
			color #fff
			padding 5px
.goto_down a
	position fixed
	bottom 0
	color #fff
	text-align center
	width 100%
	font-size 30px
	line-height 60px
	top 0
	left 0
	right 0
	z-index -1
	cursor pointer
	&:after
		position fixed
		content ''
		top 40px
		right 40px
		background-color #fc0
		width 30px
		height 30px
		background url("/images/design/cross.png") 0 0 no-repeat
		background-size 60px
	&:hover
		&:after
			opacity 0.8

.content_outer_block
	opacity 0
	transition opacity 0.2s ease-in-out
.content_item
	&.event
		float left
	&.news
		box-sizing border-box
		float none
		margin-bottom 20px
		min-height 0px
		margin-bottom 0px
		border-top 1px solid #B8B8B8
		padding-top 10px
		padding-bottom 10px
		padding-left 5px
		padding-right 5px
		.item_date
			margin-top 10px
			color #B8B8B8
		&:last-child
			margin-bottom 0px
			border-bottom 1px solid #B8B8B8
		&:hover
			background-color rgb(240, 240, 240)
			color #000
.item_fancy
	position absolute
	display block
	top 0
	left 0
	right 0
	bottom 0
	z-index 100
.content_news_block
	width 220px
	position absolute
	left 720px
	margin-bottom 20px


.content_column.main .content_outer_block, .header_inner
	@media screen and (max-width: 1490px)
		max-width 1240px

.content_column.main .content_outer_block, .header_inner
	@media screen and (max-width: 1240px)
		max-width 990px

.content_column.main .content_outer_block, .header_inner
	@media screen and (max-width: 990px)
		max-width 740px

.content_column.main .content_outer_block, .header_inner
	@media screen and (max-width: 740px)
		max-width 490px