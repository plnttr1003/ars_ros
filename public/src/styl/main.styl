.content_outer_block
	opacity 0
	transition opacity 0.2s ease-in-out

.content_banner
	display block
	height 100px
	margin-bottom 40px
	background url(/images/design/bg_01.jpg) 50% 16% no-repeat
	background-size 100%
	position relative
	&:after
		content ''
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		display block
		background url(/images/design/osv_logo_1.png) 50% 6px no-repeat
		background-size 380px
	&:before
		content 'онлайн выставка'
		text-transform uppercase
		text-align center
		position absolute
		top 67px
		bottom 0
		left 50%
		margin-left -80px
		display block
		background url(/images/design/star_white.png) 50% 2px no-repeat
		background-size 11px
		color #ccc
		font-size 8pt
		padding-top 11px
		border-top 1px solid #ccc
		width 160px
	&:hover
		opacity 0.9

.content_item
	&.event
		float left
		&:hover
			&:after
				position absolute
				top 0
				left 0
				right 0
				bottom 0
				background rgba(0,0,0,0.2)
				content ''
				z-index 0
	&.news
		box-sizing border-box
		// background-color #604A8A
		float none
		margin-bottom 20px
		min-height 0px
		margin-bottom 0px
		border-top 1px solid #B8B8B8
		padding-top 10px
		padding-bottom 10px
		padding-left 5px
		padding-right 5px
		.item_date
			margin-top 10px
			color #B8B8B8
		&.content_news_goto
			margin-bottom 0px
			font-weight bold
			&:hover
				background none
				color #555
		&:hover
			background-color rgb(240, 240, 240)
			color #000

.content_news_block
	// background-color #318A4E
	width 220px
	position absolute
	left 720px
	margin-bottom 20px
	@media screen and (max-width: 1280px)
		left 480px