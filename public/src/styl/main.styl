.screen_block
	height 100%
	&.info_block
		width 100%
		position absolute
		overflow hidden
		z-index 200
		background rgba(0,0,0,0.75)
		display none
		.info_block_inner
			width 700px
			position absolute
			top 200px
			bottom 0
			left 50%
			margin-left -350px
			overflow hidden
			.content_navigate_block
				color #fff
				padding-right 40px
				overflow-y scroll
				width 100%
				height 100%
	&.intro_block
		width 100%
		position absolute
		overflow-y scroll
		z-index 2000
		background #000
		.intro_block_background
			height 100%
			background-size 105%
			background-position 50%
			height 101%
			filter blur(10px)
		.intro_block_inner
			width 100%
			display table
			height 100%
			position absolute
			top 0
			.intro_block_image
				height 100%
				display table-cell
				vertical-align middle
				text-align center
				background rgba(0, 0, 0, 0.69)
				img
					width 378px
	&.about_block
		position absolute
		overflow hidden
		width 100%
		background rgba(0,0,0,0.75)
		color #fff
		display none
		z-index 200
		.about_block_inner
			overflow-y visible
			width 700px
			margin 100px auto 0
			.about_block_image
				img
					margin 0 auto
					display block
					width 240px
					margin-bottom 55px
.goto_down
	position absolute
	bottom 0
	color #fff
	text-align center
	width 100%
	font-size 30px
	line-height 60px
	a.goto_down_inner
		cursor pointer
.content_outer_block
	opacity 0
	transition opacity 0.2s ease-in-out
.content_item
	&.event
		float left
	&.news
		box-sizing border-box
		float none
		margin-bottom 20px
		min-height 0px
		margin-bottom 0px
		border-top 1px solid #B8B8B8
		padding-top 10px
		padding-bottom 10px
		padding-left 5px
		padding-right 5px
		.item_date
			margin-top 10px
			color #B8B8B8
		&:last-child
			margin-bottom 0px
			border-bottom 1px solid #B8B8B8
		&:hover
			background-color rgb(240, 240, 240)
			color #000
.item_fancy
	position absolute
	display block
	top 0
	left 0
	right 0
	bottom 0
	z-index 100
.content_news_block
	width 220px
	position absolute
	left 720px
	margin-bottom 20px