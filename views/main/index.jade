	.content_outer_block
		.content_outer_block_inner

			each event in events
				if (event.type == 'excursion')
					.content_item.event.important(href='/events/' + event.type +'/' + event._id, style='background-image: url(' + (event.images && event.images.length > 0 && event.images[event.images.length - 1].original) + ')')
