extends ../../layout
include ../forms.jade

block title
	title РЕДАКТИРОВАТЬ СОБЫТИЕ

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/add.css')

block content_scripts
	script(type='text/javascript', src='/build/js/add.js')

block content
	- var year = new Date()
	- year = year.getFullYear()
	- var months = ['ЯНВАРЬ', 'ФЕВРАЛЬ', 'МАРТ', 'АПРЕЛЬ', 'МАЙ', 'ИЮНЬ', 'ИЮЛЬ', 'АВГУСТ', 'СЕНТЯБРЬ', 'ОКТЯБРЬ', 'НОЯБРЬ', 'ДЕКАБРЬ']
	.form_block
		a.back_link(href='/auth/history/') < Назад
		button.toggle_eng(type='button') перевод
		.title РЕДАКТИРОВАТЬ СОБЫТИЕ
		form(action="", method="post")
			.form_title Заголовок:
			+form_text_single('title', history)
			.form_title Описание:
			+form_text_multi('description', history)
			.form_title Дата начала:
			+form_calendar('date_start', history.interval.start)
			.form_title Дата конца:
			+form_calendar('date_end', history.interval.end)
			.form_title Изображения:
			+form_images_upload(exhibit.images)
			br
			br
			input(type='submit', value='отправить')