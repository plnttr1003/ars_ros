									//- a.menu_item(href='/team')= __('Команда')
									a.menu_item(href='/partners')= __('Партнерство')
						.menu_item_block
							a.menu_item(href='http://vm.sovrhistory.ru/sovremennoy-istorii-rossii/', target='_blank')= __('Виртуальный музей')
						.menu_item_block
							a.menu_item.menu_empty= __('События')
							.menu_drop
								.drop_inner
									a.menu_item(href='/events/exhibition')= __('Выставки')
