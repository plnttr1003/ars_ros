							a.menu_item.menu_empty= __('Посетителям')
							.menu_drop
								.drop_inner
									a.menu_item(href='/events/excursion')= __('Экскурсии')
									a.menu_item(href='/events/education')= __('Образовательные программы')
									a.menu_item(href='/events/teach')= __('Центр музейной педагогики')
									//- a.menu_item(href='/souvenirs')= __('Сувенирная продукция')
									a.menu_item(href='/schedule')= __('Билеты и расписание')
						//- .menu_item_block
							a.menu_item(href='/partners') Партнерство
						.menu_item_block
							a.menu_item(href='/live')= __('Живая история')
						.menu_item_block
							a.menu_item(href='/contacts')= __('Контакты')
					.menu_block.right
						.social_block
							a(href='https://vk.com/sovr_history', target='_blank') 
							a(href='https://www.facebook.com/sovr.history', target='_blank') 
							a(href='https://twitter.com/sovrmuse', target='_blank') 
							a.inst(href='https://instagram.com/sovr.history', target='_blank') 
						.options_block
							.option.search 
							if (locale == 'ru')
								a.option.lang(href='/lang/en') EN
							else
								a.option.lang(href='/lang/ru') RU
				.search_block
					.search_inner
						input.search_input(type='text', placeholder= __('Найти...'))
						.search_result
							.search_context.exhibits
								.context_title= __('Экспонаты')
								.context_results_block
							.search_context.events
								.context_title= __('События')
								.context_results_block
			.content_block
				.content_up_block
					block content_up
				.content_columns_block
					.content_column.main
						.column_main_inner
							block content
							.footer_block
								//- .social_block
									a(href='https://vk.com/sovr_history', target='_blank') 
									a(href='https://www.facebook.com/sovr.history', target='_blank') 
									a(href='https://twitter.com/sovrmuse', target='_blank') 
									a(href='https://instagram.com/sovr.history', target='_blank') 
